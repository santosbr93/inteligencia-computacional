import random
import numpy

class Cromossomo:
    
    def __init__(self, a):
        self.a = a  
        
    def dividir(self):
        tamanho = len(self.a)
        metade=int(tamanho/2)
        self.v1 = self.a[0:metade]
        self.v2 = self.a[metade:tamanho] 
        print(self.v1)
        print(self.v2)

    def fitness(self):
       valor = sum(self.v1)-sum(self.v2)
       print(abs(valor))


entrada = [2,3,4,5,6,7]

vetor1 = Cromossomo(entrada)

vetor1.dividir()
vetor1.fitness()

random.shuffle(entrada)

vetor2 = Cromossomo(entrada)

vetor2.dividir()
vetor2.fitness()

random.shuffle(entrada)

vetor3 = Cromossomo(entrada)

vetor3.dividir()
vetor3.fitness()


